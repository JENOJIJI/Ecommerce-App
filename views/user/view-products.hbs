<section>
  <div class="container mt-5">
    <div class="row">
      {{#each products}}
        <div class="col-md-3 p-3">
          <div class="card" style="width: 15rem height:23px;">
            <img
              src="/product-images/{{this._id}}.jpg"
              class="card-img-top"
              alt="..."
              style="height: 12rem width:10rem;"
            />
            <div class="card-body">
              <h5 class="card-title">{{this.product_name}}</h5>
              <p class="card-text">{{this.description}}</p>
              <button
                onclick="addToCart('{{this._id}}')"
                class="btn btn-primary"
              >Add to Cart</button>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>