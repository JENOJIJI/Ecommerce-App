<section>
  <div class="container">
    <div class="row mt-4">
      <a href="/admin/add-products" class="btn btn-success mb-lg-3">Add Product</a>
    </div>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <th scope="col">1</th>
            <th scope="col">{{this.product_name}}</th>
            <th scope="col">{{this.category}}</th>
            <th scope="col">{{this.description}}</th>
            <th scope="col"><img
                style="width: 50px; height: 50px;"
                src="/product-images/{{this._id}}.jpg"
                alt="Product Image"
              /></th>
            <th>
              <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
              <a
                href="/admin/delete-product/{{this._id}}"
                class="btn btn-danger"
                onclick="return confirm('Are you sure to delete {{this.product_name}} ?')"
              >Delete</a>
            </th>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>